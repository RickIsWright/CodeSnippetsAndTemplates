    <Snippet>
      <Code Language="VB">
        <![CDATA[
		
		$end$
          Private Function EmployeesTable() As DataTable
              Dim dt As New DataTable()

              dt.Columns.Add(New DataColumn("EmployeeID", Type.GetType("System.Int32")))
              dt.Columns.Add(New DataColumn("BirthDate", Type.GetType("System.DateTime")))
              dt.Columns.Add(New DataColumn("LastName", Type.GetType("System.String")))
              dt.Columns.Add(New DataColumn("FirstName", Type.GetType("System.String")))
              dt.Columns.Add(New DataColumn("Title", Type.GetType("System.String")))
              dt.Columns.Add(New DataColumn("ReportsTo", Type.GetType("System.Int32")))

              Dim PrimaryKeyColumns As DataColumn() = New DataColumn(0) {}
              PrimaryKeyColumns(0) = dt.Columns("OrderID")
              dt.PrimaryKey = PrimaryKeyColumns

              For i As Integer = 0 To 70 - 1
                  Dim index As Integer = i + 1
                  Dim row As DataRow = dt.NewRow()

                  row("EmployeeID") = index
                  row("BirthDate") = New DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day, 0, 0, 0).AddHours(index)
                  row("LastName") = "Last Name " & index
                  row("FirstName") = "First Name " & index
                  row("Title") = "Title " & index
                  row("ReportsTo") = index

                  dt.Rows.Add(row)
              Next

              Return dt
          End Function
                
                ]]>
      </Code>
      <Imports>
        <Import>
          <Namespace>System.Data</Namespace>
        </Import>
      </Imports>
    </Snippet>
